  color: #fff;
  margin: 1em 0 .5em;
}
.post-fonte{
  background: #FC7C54;
  color: #000;
  font-size: .9em;
  display: inline-block;
  padding: 0px 10px 3px;
  font-weight: 200;
}
.semiboldfont{
  font-weight: 600;
}
.boldfont{
  font-weight: 800;
}

.content p:first-child{
  margin-top: 2em;
}
.content p{
  font-size: 1.2em;
  color: #636463;
  font-weight: 200;
  margin-top: 1em;
  line-height: 1.5em;
}
.content p a{
  color: #FC7C54;
  font-weight: 700;
}

/* Buttons */
button.btn, input.btn, a.btn {
  background-color: #4AB7A7;
  color: #fff;
  font-family: "Exo 2";
  font-weight: 100;
  border:none;
  padding: 10px 12px !important;
  font-size: 18px;
  text-align: center;
}
.btn:hover{
  background-color: #288584;
}
button.btn-mini, input.btn-mini, a.btn-mini {
  line-height: 1.5em;
  height: 1.5em;
  font-size: 1em;
}
button.btn-full, a.btn-full, input.btn-full {
