body {
  background: white;
  color: #999;
  font-family: 'Exo 2', Helvetica, Verdana, Arial, sans-serif;
  text-align: left;
}
a{
  font-family: 'Exo 2', Helvetica, Verdana, Arial, sans-serif;
  color: #fff;
  text-decoration: none;
  font-weight: 300;
}

h1 {
  padding-top: 1.54em;
}

img {
  max-width: 100%;
}
h1 {
  color: #4AB7A7;
  font-size: 2.4em;
  margin: 1em 0;
  padding: 0;
}
h1 small {
  float: right;
  vertical-align: text-bottom;
  margin-right: 3em;
}
h1 small {
  color: #9F9F9F;
  font-weight: 300;
  font-size: 0.4em;
  margin-top: 1.4em;
}
h1 small a {
  color: #920000;
  font-weight: 500;
}

h1.title, h2.title {
  font-size: 2.8em;
  line-height: 1.4em;
  font-weight: 900;
  color: #4AB7A7;
  margin-bottom: 0.35em;
}
h1.title + p, h2.title + p {
  font-size: 1.2em;
  font-weight: 300;
  margin-bottom: 1.6em;
}

.grid-container {
  padding-bottom: 20px;
}

.grid-container > hr {
  margin-left: 10px;
  margin-right: 10px;
}

div[class*="push-"] section {
  background: #ddeecc;
}

div[class*="pull-"] section {
  background: #ffccdd;
}

.dynamic-px-width {
  display: block;
}

.floatLeft{
  float: left;
}
.floatRight{
  float: right;
}
.regularfont{
  font-weight: 300;
}
.strongfont{
  font-weight: 700;
}
img.floatLeft {
  margin: 0 10px 5px 0;
}
section.with-margin {
  margin: 3em 0;
}
section.first-margin {
  margin-top: 1em;
}
a.btn-full.with-margin{
  margin: 1em 0;
}

header.maintop{
  background-color: #229AA7;
  border-bottom: 3px solid #036A6D;
  z-index: 99;
  padding: 0 7%;
  transition: all .5s linear;
}
@media screen and (max-width: 1076px) {
    header.maintop {
      padding: 0 .5em !important;
    }
}
.maintop img{
  margin-top: .2em;
}
.maintop nav li {
  display: inline-block;
  color: #fff;
}
.menu li a {
  font-size: .9em;
  display: inline-block;
  vertical-align: middle;
  padding: 0 .8em;
  text-align: center;
  font-weight: 200;
  color: #fff;
  text-transform: uppercase;
  line-height: 58px;
} 
.maintop nav li:hover a {
  color: #000; 
  background: #FC7C54; 
}
.maintop nav li a.dropdown:after{
  content:"";
  width:0;
  height:0;
  border-radius: 5px;
  border-style: solid;
  border-width: 5px 5px 0 5px;
  border-color: #03696d transparent transparent transparent;
  margin-left: 5px;
  margin-top: 26px;
  position: absolute;
}
.maintop nav li a.dropdown{
  padding-right: 1.5em;
}
.triangle{
  width: 0;
  height: 0;
  border-radius: 3px;
  border-style: solid;
  border-width: 7px 7px 0 7px;
  border-color: #03696d transparent transparent transparent;
}

/*banner post*/
