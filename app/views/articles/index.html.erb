<% content_for :head do %>
  <title>Open Data for Development - Feeds</title>
<% end %>

<section>
  <section id="articles_listing" class="articles-listing">
    <h1 class="bottom-reset">REDE CONECTADA</h1>
    <em>Fique por dentro das últimas notícias do universo Open Data</em><br/>
    <br>
    <% @articles.each do |article| %>
      <%= render partial: "articles/article_details", locals: {article: article, home: false} %>
    <% end %>
  </section>
  <section id="partners_listing" class="partners-listing">
    <h2 class="partners-title">Nossos Parceiros</h2>
    <%= render partial: "partners/partners_listing", locals: {partners: @partners } %>
  </section>
</section>
