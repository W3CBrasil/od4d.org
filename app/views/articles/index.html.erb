<% content_for :head do %>
  <title>Open Data for Development - Feeds</title>
<% end %>

<section>
  <h1>Connected Network</h1>
  <% @articles.each do |article| %>
    <article id="<%=article.slug%>" class="feeds rss" resource="<%=article.url%>" typeof="schema:Article">
      <h2 class="Feeds" property="schema:headline"><a href=<%=article.url%>><%= article.title %></a></h2>
        <%if !article.author.blank? then%>
          <p class="author" property="schema:author">By: <%= article.author %></p>
        <%end%>
        <%if !article.datePublished.blank? then%>
          <p class="date" property="schema:datePublished" content="<%=article.datePublished.iso8601%>">Date: <%=article.datePublished.strftime("%m/%d/%Y") %></p>
        <%end%>
        
        <p class="category" property="schema:articleSection"> <%= article.articleSection.join(", ") %></p>
        <%if !article.summary.blank? %>
          <p class="summary" property="schema:summary"> <%= article.summary%></p>
        <%elsif !article.description.blank? %>
          <p class="summary" property="schema:description"> <%= article.description %></p>
        <%end%>
    </article>
  <% end %>
</section>
