<% content_for :head do %>
  <title>Open Data for Development - Partners</title>
<% end %>

<section class="main" role="main">

  <section class="partners">
    <h1>Partners</h1>

    <% @partners.each do |partner| %>
      <article id="<%= partner.slug %>" class="rss" typeof="schema:Organization" resource="<%=partner.url%>">
        <h2 property="schema:name"><a href=<%= partner.url %>><%= partner.name %></a></h2>
        <%= image_tag(partner.logo, :alt => partner.name, :property => "schema:logo") %>
        <div property="schema:description">
          <%= partner.description %>
        </div>
      </article>
    <% end %>

  </section>
</section>
