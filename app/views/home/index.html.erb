<% content_for :head do %>
  <title><%=t('platform_name')%></title>
<% end %>

  <div class="grid-container">
    <h2 class="title blackfont txtcenter"><%= t('od4d_title') %></h2>
    <h4 class="subtitle txtcenter"><%= t('od4d_description') %></h4>

    <div id="call-banner" class="call-banner clearfix">
      <h5 class="call-title">
        <%= t('call_title') %>
      </h5>
      <ul class="push-12-5 mobile-push-10">
        <li class="grid-25 mobile-grid-80 curioso">
          <a href="#">
            <span></span>
            <p><%= t('im_curious') %></p>
          </a>
        </li>
        <li class="grid-25 mobile-grid-80 dev">
          <a href="#">
            <span></span>
            <p><%= t('im_a_developer') %></p>
          </a>
        </li>
        <li class="grid-25 mobile-grid-80 produtor">
          <a href="#">
            <span></span>
            <p><%= t('im_a_content_producer') %></p>
          </a>
        </li>
      </ul>
    </div>
    <div class="video-call-banner bgdarkgreen video-curioso">
      <video id="vidcur" class="video" width="539" height="270" controls>
          <source src="dadosabertos.mp4" type="video/mp4"></source>
      </video>
    </div>
    <div class="video-call-banner bgorange video-dev">
      <video id="viddev" class="video" width="539" height="270" controls>
          <source src="dadosabertos.mp4" type="video/mp4"></source>
      </video>
    </div>
    <div class="video-call-banner bgorange video-produtor">
      <video id="viddev" class="video" width="539" height="270" controls>
          <source src="dadosabertos.mp4" type="video/mp4"></source>
      </video>
    </div>
  </div>
  <section class="grid-container content news">
    <div class="grid-33">
      <h3 class="title-subsection"><%= t('latest_news') %></h3>
      <ul class="list-news">
      	<% @articles.each do |article| %>
	        <li>
	          <h4><%= article.articleSection.first.upcase if article.articleSection.first %></h4>
	          <p><%= link_to article.title.strip, controller: "articles", action: "show", params: {uri: "#{article.url}"} %></p>
	        </li>
        <% end %>
      </ul>
    </div>
    <div class="">
      <h3 class="title-subsection mobile-grid-100"><%= t('featured_in') %> 
        <a href='<%="/articles/filter/articleSection/#{t('featured_section')}"%>'>
        <%= t('featured_section').upcase %></a> >></h3>
      <div class="destaquegov grid-33">
          <h4 class="news-title-item title-item-destaque"><%= t('watch_out') %></h4>
          <img src="<%= asset_path 'placeholder_destaque_maior.jpg' %>" alt="" />
          <h5 class="news-title-item"><%= t('featured_about_1').upcase %></h5>
          <p class="news-txt-larger"><a href=""><%= t('featured_article_1') %></a></p>
      </div>

      <div class="destaque2gov grid-33">
        <div class="destaquemenor">
          <img src="<%= asset_path 'placeholder_destaque_menor.jpg' %>" alt="">
          <h5 class="news-title-item"><%= t('featured_about_2').upcase %></h5>
          <p class="news-txt-larger"><a href=""><%= t('featured_article_2') %></a></p>
        </div>
        <ul class="list-news">
          <li class="without-top">
            <p><a href=""><%= t('featured_article_3') %></a></p>
          </li>
          <li class="without-top">
            <p><a href=""><%= t('featured_article_4') %></a></p>
          </li>
        </ul>
      </div>
    </div>
  </section>
  <section class="bgorange">
    <div class="grid-container">
      <h3 class="title-engaje"><%= t('engage_us') %> <span><%= t('in_3_parts') %></span></h3>
      <ul class="list-engaje">
        <li class="grid-33">
          <div class="conceitos engaje-item">
            <h4><%= raw(t('concepts_title')) %></h4>
            <p><a href=""><%= t('concepts_websemantics').upcase %></a></p>
            <p><a href=""><%= t('concepts_rdfa').upcase %></a></p>
            <p><a href=""><%= t('concepts_examples').upcase %></a></p>
          </div>
        </li>
        <li class="grid-33">
          <div class="engaje-item integre clearfix">
            <h4><%= raw(t('integration_title')) %></h4>
            <p class="be-partner"><a href=""><%= raw(t('integration_beapartner').upcase) %></a></p>
            <p class="be-colaborator"><a href=""><%= raw(t('integration_colaborator').upcase) %></a></p>
          </div>
        </li>
        <li class="grid-33">
          <div class="engaje-item compartilhe">
            <h4><%= raw(t('share_title')) %></h4>
            <div>
              <p><%= raw(t('share_quote').upcase) %></p>
              <ul class="social-list-link">
                <li class="twitter"><a href=""></a></li>
                <li class="facebook"><a href=""></a></li>
                <li class="gplus"><a href=""></a></li>
              </ul>
            </div>
          </div>
        </li>
      </ul>
    </div>
  </section>
