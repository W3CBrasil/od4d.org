            <li class="produtor prod-horizontal clearfix">
              <a href="#">
                <span></span>
                <p><%= t('im_a_content_producer') %></p>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div class="pos-call-banner pos-dev">
      <div class="push-15 grid-90">
        <div class="grid-40">
          <h3><%= t('liked_it') %></h3>
          <a class="more" href="/about">
            <span></span>
            <p><%= t('get_to_know_more') %></p>
          </a>
        </div>
        <div class="grid-40">
          <h4><%= t('see_also') %></h4>
          <ul>
            <li class="curioso curioso-horizontal clearfix">
              <a href="#">
                <span></span>
                <p><%= t('im_curious') %></p>
              </a>
            </li>
            <li class="produtor prod-horizontal clearfix">
              <a href="#">
                <span></span>
                <p><%= t('im_a_content_producer') %></p>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div class="pos-call-banner pos-prod">
      <div class="push-15 grid-90">
        <div class="grid-40">
          <h3><%= t('liked_it') %></h3>
          <a class="more" href="/about">
            <span></span>
            <p><%= t('get_to_know_more') %></p>
          </a>
        </div>
        <div class="grid-40">
          <h4><%= t('see_also') %></h4>
          <ul>
            <li class="curioso curioso-horizontal clearfix">
              <a href="#">
                <span></span>
                <p>Sou curioso</p>
              </a>
            </li>
            <li class="dev dev-horizontal clearfix">
              <a href="#">
                <span></span>
                <p><%= t('im_a_developer') %></p>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <section class="grid-container content news">
    <div class="grid-33">
      <h3 class="title-subsection"><%= t('latest_news') %></h3>
      <ul class="list-news">
      	<% @articles.each do |article| %>
	        <li>
	          <h4><%= article.articleSection.first.upcase if article.articleSection.first %></h4>
	          <p><%= link_to article.title.strip, controller: "articles", action: "show", params: {uri: "#{article.url}"} %></p>
	        </li>
        <% end %>
      </ul>
    </div>
    <div class="">
      <h3 class="title-subsection mobile-grid-100"><%= t('featured_in') %> 
        <a href='<%="/articles/filter/articleSection/#{t('featured_section')}"%>'>
        <%= t('featured_section').upcase %></a> <span class="semiboldfont">&gt;&gt;</span></h3>
      <div class="destaquegov grid-33">
          <h4 class="news-title-item title-item-destaque"><%= t('watch_out') %></h4>
          <img src="<%= asset_path 'shutterstock_114997978-b.jpg' %>" alt="" />
          <h5 class="news-title-item"><%= t('featured_about_1').upcase %></h5>
          <p class="news-txt-larger"><a href=""><%= t('featured_article_1') %></a></p>
      </div>

      <div class="destaque2gov grid-33">
        <div class="destaquemenor">
          <img src="<%= asset_path 'shutterstock_173451446-b.jpg' %>" alt="">
          <h5 class="news-title-item"><%= t('featured_about_2').upcase %></h5>
          <p class="news-txt-larger"><a href=""><%= t('featured_article_2') %></a></p>
        </div>
        <ul class="list-news">
          <li class="without-top">
            <p><a href=""><%= t('featured_article_3') %></a></p>
          </li>
          <li class="without-top">
            <p><a href=""><%= t('featured_article_4') %></a></p>
          </li>
        </ul>
      </div>
    </div>
  </section>
  <section class="bgorange">
    <div class="grid-container">
      <h3 class="title-engaje"><%= t('engage_us') %> <span><%= t('in_3_parts') %></span></h3>
      <ul class="list-engaje">
        <li class="grid-33">
          <div class="conceitos engaje-item">
            <h4><%= raw(t('concepts_title')) %></h4>
            <p><%= link_to t('concepts_websemantics').upcase, {controller: "learn", action: "concepts"} %></p>
            <p><%= link_to t('concepts_rdfa').upcase, {controller: "learn", action: "introduction_to_rdf_and_rdfa"} %></p>
            <p><%= link_to t('concepts_examples').upcase, {controller: "learn", action: "how_to_create_a_semantic_page"} %></p>
          </div>
        </li>
        <li class="grid-33">
          <div class="engaje-item integre clearfix">
            <h4><%= raw(t('integration_title')) %></h4>
            <p class="be-partner"><%= link_to t('integration_beapartner').upcase, {controller: "pages", action: "become_partner"} %></p>
            <p class="be-colaborator"><%= link_to t('integration_colaborator').upcase, {controller: "pages", action: "become_contributor"} %></p>
          </div>
        </li>
        <li class="grid-33">
          <div class="engaje-item compartilhe">
            <h4><%= raw(t('share_title')) %></h4>
            <div>
              <p><%= raw(t('share_quote').upcase) %></p>
              <%= render :partial => '/layouts/followus', locals: {title: ""} %>
            </div>
          </div>
        </li>
      </ul>
    </div>
  </section>
  <section class="grid-container casos-praticos">
    <h3 class="fontitalic blackgrayfont"><%= t('cases_title').upcase %></h3>

    <div id="horizontalTab">
      <div class="resp-tabs-container bggreen">
          <div class="text-tab clearfix">
            <div class="text-tab clearfix">
              <img src="<%= asset_path 'shutterstock_144889669-b.jpg' %>" class="img-tab" />
              <h4><%= t('cases_headline_1') %></h4>
              <p><%= t('cases_text_1') %></p>
              <a class="casos-praticos-link" href=""><%= t('cases_more_link') %></a>
            </div>
          </div>
          <div>
              <div class="text-tab clearfix">
              <img src="<%= asset_path 'shutterstock_144889669-b.jpg' %>" class="img-tab" />
              <h4><%= t('cases_headline_2') %></h4>
              <p><%= t('cases_text_2') %></p>
            </div>
          </div>
          <div>
              <div class="text-tab clearfix">
              <img src="<%= asset_path 'shutterstock_144889669-b.jpg' %>" class="img-tab" />
              <h4><%= t('cases_headline_3') %></h4>
              <p><%= t('cases_text_3') %></p>
            </div>
          </div>
          <div>
              <div class="text-tab clearfix">
              <img src="<%= asset_path 'shutterstock_144889669-b.jpg' %>" class="img-tab" />
              <h4><%= t('cases_headline_4') %></h4>
              <p><%= t('cases_text_4') %></p>
            </div>
          </div>
          <div>
              <div class="text-tab clearfix">
              <img src="<%= asset_path 'shutterstock_144889669-b.jpg' %>" class="img-tab" />
              <h4><%= t('cases_headline_5') %></h4>
              <p><%= t('cases_text_5') %></p>
            </div>
          </div>
      </div>
      <ul class="resp-tabs-list">
        <li class="grid-20"><%= t('cases_tab_1') %></li>
        <li class="grid-20"><%= t('cases_tab_2') %></li>
        <li class="grid-20"><%= t('cases_tab_3') %></li>
        <li class="grid-20"><%= t('cases_tab_4') %></li>
        <li class="grid-20"><%= t('cases_tab_5') %></li>
      </ul>
    </div>

    <p class="others-cases">Get to know other use cases, <%= link_to t('menu_6_1'), {controller: "articles", action: "filter", field: "articleSection", term: "Projects" }%> and <%= link_to t('menu_6_2'), {controller: "articles", action: "filter", field: "articleSection", term: "Products" }%> in OD4D Platform.</p>
    
  </section>

  <section class="bggray txtcenter partners">
    <div class="grid-container">
      <h3 class="fontitalic thinfont"><%= t('partners_title') %></h3>
      <ul>
        <li><a href=""><img src="<%= asset_path 'coi.png' %>" /></a></li>
        <li><a href=""><img src="<%= asset_path 'ilda57px.png' %>" /></a></li>
        <li><a href=""><img src="<%= asset_path 'oddc_partners.png' %>" /></a></li>
      </ul>
    </div>
  </section>