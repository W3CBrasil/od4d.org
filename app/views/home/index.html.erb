    <div class="video-call-banner video-produtor">
      <%= video_tag(['dadosabertos.mp4'], id: 'vidprod', class: 'video', size: '550x300', controls: true)  %>
    </div>
    <div class="pos-call-banner bgdarkgreen pos-curioso">
      <div class="push-15 grid-90">
