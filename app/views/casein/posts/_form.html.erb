<!-- Scaffolding generated by Casein v5.0.0.0 -->


<div class="row">
	<div class="col-lg-6">
		<%= casein_text_field f, f.object, :title, {:casein_label => "Título"} %>
	</div>
	<div class="col-lg-6">
		<%= casein_text_field f, f.object, :author, {:casein_label => "Autor"} %>
	</div>
</div>

<div class="row">
	<div class="col-lg-12">
		<%= casein_datetime_select f, f.object, :pub_date, {:casein_label => "Data"} %>
	</div>
</div>
<div class="row">
	<div class="col-lg-4">
		<% languages = Language.all.map { |lang| [lang.name, lang.id] } %>
		<%= casein_select f, f.object, :languages_id, options_for_select(languages, f.object["languages_id"]), casein_label: "Língua",include_blank: '--' %>
	</div>
	<div class="col-lg-4">
		<% sections = PostSection.all.map { |section| [section.name, section.id] } %>
		<%= casein_select f, f.object, :post_sections_id, options_for_select(sections, f.object["post_sections_id"]), :casein_label => "Seção",include_blank: '--' %>
	</div>
	<div class="col-lg-4">
		<%= casein_text_area f, f.object, :about, {:casein_label => "Assunto ("+t('casein_post_form_about_tip')+")"} %>
	</div>
</div>

<div class="row">
	<div class="col-lg-12">
		<%= casein_text_area_big f, f.object, :content, {:casein_label => "Conteúdo", :class => 'ckeditor'} %>
	</div>
</div>
